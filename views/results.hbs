<div class="container">

    <p class="robot-big">
        <img src="images/bot.png" alt="Buddy Bot" height="65" width="135"/>
        Personality analyzed!
    </p>

    {{#each tree.children}}
        <div style="margin-left: 20px">
            {{name}}
            <div style="margin-left: 20px">
                {{#each children}}
                    {{name}}:
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="2"
                             aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{formatPercentage percentage}}%;">
                            {{formatPercentage percentage}}%
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}

    <p>Word Count Message: {{word_count_message}}</p>

    <a href="/buddies" class="btn btn-default" style="text-shadow: none">Show me some buddies!</a>
     

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>





<canvas id="myChart" class="buddychart"> </canvas>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var pieData = [
   {
      value: 25,
      label: 'Java',
      color: '#811BD6'
   },
   {
      value: 10,
      label: 'Scala',
      color: '#9CBABA'
   },
   {
      value: 30,
      label: 'PHP',
      color: '#D18177'
   },
   {
      value : 35,
      label: 'HTML',
      color: '#6AE128'
   }
];

var skillsChart = new Chart(ctx).Pie(pieData, {
  pointDotRadius: 10,
  bezierCurve: false,
  scaleShowVerticalLines: false,
  scaleGridLineColor: 'black'
});
</script>



</div>
