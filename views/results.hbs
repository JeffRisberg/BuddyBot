<div class="container">

    <p class="robot-big">
        <img src="images/bot.png" alt="Buddy Bot" height="65" width="135"/>
        Personality analyzed!
    </p>

    {{#each tree.children}}
        <div style="margin-left: 20px">
            {{name}}
            <div style="margin-left: 20px">
                {{#each children}}
                    {{name}}:
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="2"
                             aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: {{formatPercentage percentage}}%;">
                            {{formatPercentage percentage}}%
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}

    <p class="robot-small">You have fed this many words to the Buddy-Matic Analyze-o-Tron 9000:  {{word_count_message}}</p>
    <br>
   
    <form action="/buddies" method="post">
        <input type="hidden" name="email" value="{{email}}" />
        <input type="hidden" name="username" value="{{username}}" />

        <input type="submit" class="btn btn-buddy" style="text-shadow: none" value="Show me some buddies!"/>
    </form>
</div>
